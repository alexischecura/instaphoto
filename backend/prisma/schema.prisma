generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  fullName    String    @db.VarChar(255)
  username    String    @unique @db.VarChar(255)
  email       String    @unique @db.VarChar(255)
  password    String    @db.VarChar(255)
  phoneNumber String?   @db.VarChar(255)
  birthDate   DateTime?

  profilePhoto String?   @default("user-default.jpg") @db.VarChar(255)
  description  String?   @db.VarChar(255)
  active       Boolean   @default(true)
  posts        Post[]
  comments     Comment[]
  likes        Like[]
  followers    Follow[]  @relation("Follower")
  followees    Follow[]  @relation("Followee")

  verified             Boolean?  @default(false)
  verificationCode     String?   @unique @db.Text
  provider             String?
  passwordResetToken   String?
  passwordResetExpires DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email, username, verificationCode])
  @@map("users")
}

model Post {
  id        String    @id @default(cuid())
  photoUrl  String    @db.VarChar(255)
  content   String
  createdAt DateTime  @default(now())
  comments  Comment[]
  likes     Like[]
  tags      Tag[]

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Comment {
  id        String   @id @default(cuid())
  comment   String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
  post   Post   @relation(fields: [postId], references: [id])
  postId String
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
  post   Post   @relation(fields: [postId], references: [id])
  postId String

  @@unique([userId, postId])
}

model Tag {
  id       String @id @default(cuid())
  tag_name String @unique @db.VarChar(255)
  post     Post[]
}

model Follow {
  createdAt DateTime @default(now())

  follower   User   @relation("Follower", fields: [followerId], references: [id])
  followerId String
  followee   User   @relation("Followee", fields: [followeeId], references: [id])
  followeeId String

  @@unique([followerId, followeeId])
}
